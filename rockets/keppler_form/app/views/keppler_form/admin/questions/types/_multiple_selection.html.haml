.box.slice-box.p-15{ id: "question-#{question.id}" }
  .box-header.with-border
    .box-title
      = "#{ t('keppler-form.models.singularize.question').humanize }"
      .badge= "#{ t('keppler-form.questions.multiple_selection').humanize }"
    .box-tools.pull-right
      %a.btn.btn-box-tool{ 'data-widget': 'collapse', type: 'button' }
        %i.fa.fa-minus
      = link_to({ controller: :questions, action: :delete, poll_id: question.poll.id, id: question.id }, { method: :delete, remote: true }) do
        %i.fa.fa-times
  .box-body
    .fields{ id: "fields-#{question.id}" }
      = render 'keppler_form/admin/questions/fields', question: question
    .fields-option
      = simple_form_for "", url: { controller: :questions, action: :add_option, poll_id: question.poll.id, id: question.id }, remote: true do |f|
        .row
          .col-xs-12
            = f.input :name, label: t('keppler-form.actions.add_new_option').humanize, input_html: { id: "question-input-#{question.id}" }
    .option{ id: "fields-option-#{question.id}" }
      = render "keppler_form/admin/questions/partial/options", question: question