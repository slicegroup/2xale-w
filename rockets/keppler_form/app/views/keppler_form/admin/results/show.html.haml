= title "Results | #{@result.id}"
.wrapper
	.wrapper-body.container
		.row
      .col-lg-2
        = link_to :back, 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
          .arrow-back.btn.btn-default
            %i.icon-arrow-left
            = t('keppler.actions.back')
		.actions
			- if can?(module_name).delete?
				= link_to admin_poll_result_path(@poll, @result), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can?(module_name).update?
				= link_to edit_admin_poll_result_path(@poll, @result), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to admin_poll_results_path(@poll), class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			%table.list.bordered
				%tr.list-row
					%th.display-label= t("model.#{controller_name.singularize}.attributes.name")
					%td.display-value.fs-body-1.tc-black-2= @result.name
				%tr.list-row
					%th.display-label= t("model.#{controller_name.singularize}.attributes.email")
					%td.display-value.fs-body-1.tc-black-2= @result.email
				%tr.list-row
					%th.display-label= t("model.#{controller_name.singularize}.attributes.phone")
					%td.display-value.fs-body-1.tc-black-2= @result.phone
				%tr.list-row
					%th.display-label= t("model.#{controller_name.singularize}.attributes.company")
					%td.display-value.fs-body-1.tc-black-2= @result.company
				- @result.results_questions.each do |result|
					%tr.list-row
						%th.display-label= result.question.sentence
						%td.display-value.fs-body-1.tc-black-2= result.option
