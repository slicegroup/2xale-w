%section.product-detail
  .container
    %ol.breadcrumb
      %li.breadcrumb-item
        %a{:href => app_index_path} Inicio 
      %li.breadcrumb-item
        %a{:href => "#"}= @product&.category.name || ''
      %li.breadcrumb-item
        %a= @product.name
    .row
      .col-lg-6
        .row
          .col-lg-2
            %ul.slider-nav
              - @product.images.each do |image|
                %li
                  = image_tag image.url
          .col-lg-10
            .slider-for
              - @product.images.each do |image|
                = image_tag image.url
      .col-lg-4
        .product-right-box
          .title-box
            -if @product.offer
              .badge.badge-offer Oferta
            %h1.product-title= @product.name
            .counter-product
              %ul
                %li
                  %span#days
                  Dias
                %li
                  %span#hours
                  Horas
                %li
                  %span#minutes
                  Minutos
          .price-box
            %span $749.99
            %a.btn.btn-product{ href: '', "data-toggle"=>"modal", "data-target"=>"#modalForm" } Solicitar
      .col-lg-2
        .ad_left{ style: 'background-image: url("https://cdn-images-1.medium.com/max/1600/1*ibN0ptxrg6LkZ5DZbKv2YA.png")' }
#modalForm.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "modalFormLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} ×
      .modal-body
        %form
          .form-group
            %label Nombre
            %input.form-control
          .form-group
            %label Correo
            %input.form-control
          %button.btn.btn-primary{type: "submit"} Enviar solicitud
%section.product-description
  .container
    %nav
      #nav-tab.nav.nav-tabs{role: "tablist"}
        %a#nav-description-tab.nav-item.nav-link.active{"aria-controls" => "nav-description", "aria-selected" => "true", "data-toggle" => "tab", href: "#nav-description", role: "tab"} Descripción
    #nav-tabContent.tab-content
      #nav-description.tab-pane.fade.show.active{"aria-labelledby" => "nav-description-tab", role: "tabpanel"}
        = @product.description
%section.product-related
  .container
    %h1.title Productos Relacionados
    .row
      - @products.each do |product|
        .col-lg-4
          .product-card
            %a{ href: '' }
              .product-image{ style: "background-image: url('#{@product.images.first.url}')" }
                - if product.offer
                  %span.badge.badge-offer Oferta
                - else
                  %span.badge.badge-new Nuevo
            .product-content
              %a{ href: '' }
                %small= product&.category&.name || ''
              %a{ href: '' }
                %h4= product.name
                .product-price
                  %span= product.price
                .counter
                  %ul
                    %li
                      %span#days
                      Dias
                    %li
                      %span#hours
                      Horas
                    %li
                      %span#minutes
                      Minutos
            %a.product-footer{ href: '#' }
              .btn-more
                Solicitar
                %i.icofont-arrow-right
%section
  .container
    .row
      .col-lg-12
        .ad_banner_full{ style: 'background-image: url("https://juzarraga.files.wordpress.com/2012/01/mcd_mcbites.jpg")' }

:javascript
   $('.slider-for').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: false,
    fade: true,
    asNavFor: '.slider-nav'
  });
  $('.slider-nav').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    asNavFor: '.slider-for',
    dots: false,
    focusOnSelect: true,
    vertical: true
  });