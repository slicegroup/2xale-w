.question
  - unless question.sentence.blank?
    %label= question.sentence
  - unless question.description.blank?
    %p.description-encuesta= question.description
  .radio.radio-primary.inputGroup
    %input{ type: 'radio', name: "question-#{question.id}[true-or-false]", id: "question-#{question.id}_option-true", value: 'Sí', required: question.required_attr?  }
    %label.opciones{ for: "question-#{question.id}_option-true" } Sí
  .radio.radio-primary.inputGroup
    %input{ type: 'radio', name: "question-#{question.id}[true-or-false]", id: "question-#{question.id}_option-false", value: 'No', required: question.required_attr?  }
    %label.opciones{ for: "question-#{question.id}_option-false" } No
  .errorSpan