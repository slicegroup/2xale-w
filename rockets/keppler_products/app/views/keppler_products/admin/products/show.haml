.container
  .row
    .col-lg-2
      = link_to admin_products_products_path, 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
        .arrow-back.btn.btn-default
          %i.icon-arrow-left
          = t('keppler.actions.back')
  .show-section
    .row
      .col-lg-12
        .box.slice-box.p-15
          .box-header.with-border
            %h3.box-title= t('keppler.models.singularize.product').humanize
            .box-tools.pull-right
              - if can?(model).update?
                = link_to edit_admin_products_product_path(@product), class: 'btn btn-box-tool', title: t('keppler.actions.edit') do
                  %i.icon-pencil
              - if can?(model).destroy?
                = link_to admin_products_product_path(@product), class: 'btn btn-box-tool', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
                  %i.icon-trash

          .box-body.no-padding
            %table.table
              %tbody
                - @product.as_json(except: %w[id position deleted_at seller seller_name seller_phone seller_email category_id offer]).each do |attribute, value|
                  %tr.list-row
                    %th.display-label= t("activerecord.attributes.#{attribute}")
                    %td.display-value.fs-body-1.tc-black-2
                      - if @attachments.dig('images', 'names').include?(attribute)
                        = image_tag value.url if value.url
                      - elsif @attachments.dig('images', 'names').map(&:pluralize).include?(attribute)
                        - value.each do |image|
                          = image_tag image.url if image.url
                      - else 
                        = sanitize raw value
                %tr.list-row
                  %th.display-label= t("activerecord.attributes.category_id")
                  %td.display-value.fs-body-1.tc-black-2= @product.category.name
                %tr.list-row
                  %th.display-label= t("activerecord.attributes.offer")
                  %td.display-value.fs-body-1.tc-black-2.text-overflow
                    - if @product.offer?
                      %i.icon-star{ style: 'color: yellow' }
                    - else
                      %i.icon-close{ style: 'color: red' }
                - if @product.seller.eql?('2xale')
                  %tr.list-row
                    %th.display-label= t("activerecord.attributes.seller")
                    %td.display-value.fs-body-1.tc-black-2= @product.seller
                - else
                  %tr.list-row
                    %th.display-label= t("activerecord.attributes.seller")
                    %td.display-value.fs-body-1.tc-black-2= @product.seller_name
                  %tr.list-row
                    %th.display-label= t("activerecord.attributes.seller_phone")
                    %td.display-value.fs-body-1.tc-black-2= @product.seller_phone
                  %tr.list-row
                    %th.display-label= t("activerecord.attributes.seller_email")
                    %td.display-value.fs-body-1.tc-black-2= @product.seller_email
