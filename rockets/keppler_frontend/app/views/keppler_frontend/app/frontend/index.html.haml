%section.home
  .home-slider
    - @banners.each do |banner|
      .banner-slider
        .banners-box
          = image_tag banner.image.url, class: 'banner-item'
          .banner-mask
            %h1= banner.title
            %a.btn-more{ href: '' }
              Ver m치s
              %i.icofont-arrow-right
        .search-cta
          %h1= banner.search_text
  .search-input
    %form.form-inline
      .input-group
        %input.form-control{ type: 'search', placeholder: 'Buscar' }
        .input-group-prepend
          %i.icofont-search.input-group-text
%section.products
  .row
    .col-lg-9
      .row
        - @products.each do |product|
          .col-lg-4
            .product-card
              %a{ href: '' }
                .product-image{ style: "background-image: url('#{product.images.sample.url}')" }
                  %span.badge.badge-new New
              .product-content
                %a{ href: '' }
                  %small= product.category.name
                %a{ href: '' }
                  %h4= product.name
                  .product-price
                    %span= product.price
                  .counter
                    %ul
                      %li
                        %span#days
                        Dias
                      %li
                        %span#hours
                        Horas
                      %li
                        %span#minutes
                        Minutos
              %a.product-footer{ href: '#' }
                .btn-more
                  Solicitar
                  %i.icofont-arrow-right
    .col-lg-3
      - 2.times do
        .ad_full{ style: 'background-image: url("https://cdn-images-1.medium.com/max/1600/1*ibN0ptxrg6LkZ5DZbKv2YA.png")' }
%section.half_banners
