<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Fecha</Data></Cell>
        <Cell><Data ss:Type="String">Producto</Data></Cell>
        <Cell><Data ss:Type="String">Expiraci√≥n del producto</Data></Cell>
        <Cell><Data ss:Type="String">Precio</Data></Cell>
        <Cell><Data ss:Type="String">Datos del solicitante</Data></Cell>
      </Row>
    <% @cotizations.each do |cotization| %>
      <Row>
        <Cell><Data ss:Type="String"><%= cotization.created_at %></Data></Cell>
        <Cell><Data ss:Type="String"><%= cotization.product_name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= cotization.expiration %></Data></Cell>
        <Cell><Data ss:Type="String"><%= number_to_currency(cotization.product_price) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= cotization.content_sanitize %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>